{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@nova/infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@nova/shared": [
                "src/shared"
            ],
            "@nova/shared/*": [
                "src/shared/*"
            ],
            "@nova/shared/ui/*": [
                "src/shared/ui/*"
            ],
            "@nova/domain-editor/*": [
                "src/domain-editor/*"
            ],
            "@nova/domain-kb/*": [
                "src/domain-kb/*"
            ],
            "@nova/drag-workspace/*": [
                "src/drag-workspace/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "apps",
        "node_modules",
        "dist"
    ]
}
